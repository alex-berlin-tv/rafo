<!doctype html>
<html lang="de">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ALEX Upload</title>

    <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', path='/img/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', path='/img/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', path='/img/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ url_for('static', path='/img/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ url_for('static', path='/img/safari-pinned-tab.svg') }}" color="#88e5ff">
    <link rel="shortcut icon" href="{{ url_for('static', path='/img/favicon.ico') }}">
    <meta name="msapplication-TileColor" content="#88e5ff">
    <meta name="msapplication-config" content="{{ url_for('static', path='/img/browserconfig.xml') }}">
    <meta name="theme-color" content="#88e5ff">

    <link href="{{ url_for('static', path='/css/bulma.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', path='/css/fontawesome.min.css') }}" rel="stylesheet">
</head>

<body>
    <nav class="navbar is-info" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <img src="{{ url_for('static', path='/img/logo-text.svg') }}" width="180" height="28">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-end">
                <a class="navbar-item" href="/help">
                    <i class="fa-regular fa-circle-question mx-1"></i> Hilfe
                </a>
            </div>
        </div>
    </nav>
    <div class="container mt-6">
        <div class="columns is-mobile">
            <div class="column"></div>
            <div class="column is-10-tablet is-11-mobile">
                {% block content %}
                {% endblock %}
            </div>
            <div class="column"></div>
        </div>
    </div>
</body>